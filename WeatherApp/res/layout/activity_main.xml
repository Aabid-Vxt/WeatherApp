<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/city_search_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:ems="10" />

        <ListView
        android:id="@+id/main_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_search_edittext"
        android:layout_alignRight="@+id/city_search_edittext"
        android:layout_below="@+id/city_search_edittext" >
    </ListView>
    
    <ListView
        android:id="@+id/suggestion_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_search_edittext"
        android:layout_alignRight="@+id/city_search_edittext"
        android:background="#c0c0c0"
        android:layout_below="@+id/city_search_edittext" >
    </ListView>

    
</RelativeLayout>